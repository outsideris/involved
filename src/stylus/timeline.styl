.timeline
  border-right 1px solid common-border-color
  background-color timeline-background-color
  overflow-y auto
  flex-shrink 0
  flex-basis timeline-width
  .timeline-cell
    &:hover
      background-color #F2F2F2
    .cell-type
      width 50px
      position relative
      .octicon
        position absolute
        top 10px
        left 50%
        margin-left -((timeline-icon-size + timeline-icon-border-width * 2) / 2)
        width timeline-icon-size
        height timeline-icon-size
        line-height timeline-icon-size
        border timeline-icon-border-width solid timeline-icon-border-color
        border-radius 999px
        color timeline-icon-color
        display inline-block
        text-align center
        font-size 1.3em
        z-index 10
        background-color timeline-background-color
      &:after
        content ""
        position absolute
        z-index 1
        top 0
        bottom 0
        left 50%
        border-left timeline-icon-border-width solid timeline-icon-border-color
    .cell-body
      flex-grow 1
      width (timeline-width - timeline-iconarea-width)
      padding 10px 10px 10px 0
      .avatar
        width timeline-avatar-size
        height timeline-avatar-size
        float left
        margin-right 7px
      .username
        display block
        margin-bottom 0px
      .repo
        color default-sub-text-color
      time
        float right
        font-size .7em
        color default-sub-text-color
    &.infinite-loading
      line-height 50px
      height 50px
      text-align center

.detail
  flex-grow 1
  background-color detail-background
  .avatar
    width 50px
    height 50px
