body
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0
  color default-text-color
  font-size default-font-size
  overflow hidden

#content
  height 100%

.menus
  padding-top titlebar-height
  background-color menubar-background
  border-right 1px solid common-border-color
  flex none
  width menubar-width
  box-shadow inset 0 0 10px #eee
  position absolute
  top 0
  bottom 0

.main-contents
  padding-left menubar-width
  overflow-y auto
  height 100%

.acolumn
  width 50%
  margin titlebar-height auto

.full-height
  height 100%
