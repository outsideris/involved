body
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin 0
  padding 0
  color default-text-color
  font-size default-font-size

a
a:hover
a:active
a:visited
  color default-link-color
  font-weight bold
  text-decoration none

.body
  padding-top titlebar-height

.flex-container
  display flex
  height 100%
  width 100%

.flex-container-row
  flex-direction row

.flex-container-col
  flex-direction column

.menus
  background-color menubar-background
  border-right 1px solid common-border-color
  flex-grow 0
  flex-shrink 0
  flex-basis menubar-width

.main-contents
  flex-grow 1
