a
a:hover
a:active
a:visited
  color default-link-color
  font-weight bold
  text-decoration none

.flex-container
  display flex
  height 100%
  width 100%

.avatar
  width 45px
  height 45px

.guide
  margin-top 20px
  padding 10px 20px
  border 1px solid #E5E5E5
  border-radius 10px

.table-list
  display table
  table-layout fixed
  width 100%
  border-bottom 1px solid #E5E5E5

.table-list-item
  display table-row
  .table-list-cell:last-child
    border-left none
    border-right 1px solid #E5E5E5
    width 60px

.table-list-cell
  position relative
  display table-cell
  border-top 1px solid #E5E5E5
  border-left 1px solid #E5E5E5
  padding 8px 10px

.body-blank
  margin-top 100px

.spinner-wrap
  width 100%
  height 100%
  position relative
  .spinner
    margin 0 auto
    width 60px
    height 60px
    position absolute
    text-align center
    animation sk-rotate 2.0s infinite linear
    top 50%
    left 50%
    margin-top -20px
    margin-left -20px

  .dot1
  .dot2
    width 60%
    height 60%
    display inline-block
    position absolute
    top 0
    background-color #333
    border-radius 100%
    animation sk-bounce 2.0s infinite ease-in-out
  .dot2
    top auto
    bottom 0
    -webkit-animation-delay -1.0s
    animation-delay -1.0s

@keyframes sk-rotate {
  100% {
    transform rotate(360deg)
  }
}

@keyframes sk-bounce {
  0%, 100% {
    transform scale(0.0)
  } 50% {
    transform scale(1.0)
  }
}
